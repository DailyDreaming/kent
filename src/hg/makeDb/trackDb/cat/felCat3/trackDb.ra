# Local declaration so that local gold.html is picked up.
track gold
shortLabel Assembly
longLabel Assembly from Fragments
group map
priority 10
visibility hide
color 150,100,30
altColor 230,170,40
type bed 3 +

# Local declaration so that local gap.html is picked up.
track gap
shortLabel Gap
longLabel Gap Locations
priority 11
group map
visibility dense
type bed 3 +

# Unsplit mRNA track for scaffold-based assembly.
track all_mrna
shortLabel $Organism mRNAs
longLabel $Organism mRNAs from GenBank
group rna
priority 54
visibility hide
spectrum on
type psl .
cdsDrawOptions enabled
baseColorUseCds genbank
baseColorUseSequence genbank
showDiffBasesAllScales .

track all_est
shortLabel $Organism ESTs
longLabel $Organism ESTs Including Unspliced
group rna
priority 57
visibility hide
spectrum on
intronGap 30
type psl est
baseColorUseSequence genbank

# Jim thought we should hide this
track xenoRefGene
shortLabel Other RefSeq
longLabel Non-$Organism RefSeq Genes
group genes
priority 35.1
visibility hide
color 12,12,120
type genePred xenoRefPep xenoRefMrna

searchTable gold
searchMethod exact
query select chrom,chromStart,chromEnd,frag from %s where frag like '%s'
shortCircuit 1
termRegex (contig_)[0-9]+
searchPriority 8
