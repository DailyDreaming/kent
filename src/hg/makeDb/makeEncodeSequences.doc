############################################################
# get sequences

cd /cluster/bluearc/encode
rm -rf makeLists.pl >& /dev/null
cat > makeLists.pl << EOF
#!/usr/bin/perl -W

%libOptions = 
    (
     "armadillo" => "-mammal ",
     "baboon"    => "        ",
     "cat"       => "-cat    ",
     "chicken"   => "-chicken",
     "chimp"     => "        ",
     "cow"       => "-cow    ",
     "dog"       => "-dog    ",
     "fugu"      => "-fugu   ",
     "galago"    => "        ",
     "human"     => "        ",
     "marmoset"  => "        ",
     "mouse"     => "-mus    ",
     "pig"       => "-pig    ",
     "platypus"  => "-mammal ",
     "rat"       => "-rat    ",
     "ratb"      => "-rat    ",
     "tetraodon" => "-danio  ",
     "zebrafish" => "-danio  ",
     "zfish"     => "-danio  "
     );

$efetchURL  = "http://www.ncbi.nih.gov/entrez/eutils/efetch.fcgi?db=nucleotide&rettype=fasta";
$bluearc    = "/cluster/bluearc/encode";
$msaDir     = "/usr/local/apache/htdocs/encode/downloads/msa";
$freezeDate = shift;
$metadata   = "${msaDir}/${freezeDate}/metadata.txt";
$wgetList   = "${bluearc}/wgetList";
$maskList   = "${bluearc}/para/maskList";
$testDir    = "${bluearc}/${freezeDate}.test";
$nibFragF   = "${testDir}/runNibFragDiff";

open(METADATA, " < ${metadata}") or die "can't open ${metadata} for reading.\n";
open(WGETLIST, " > ${wgetList}") or die "can't open ${wgetList}";
open(MASKLIST, " > ${maskList}") or die "can't open ${maskList}";
open(NIBFRAG,  " > ${nibFragF}") or die "can't open ${nibFragF}";

print(WGETLIST "cd $bluearc\n");

while (<METADATA>)
{
    if (/niscOrganism/) { next; }
    @fields     = split /\t/;
    $species    = $fields[0];
    $db         = $fields[6];
    $chrom      = $fields[7];
    $chromStart = $fields[8];
    $chromEnd   = $fields[9];
    $acc        = $fields[10];

    print(WGETLIST "wget -O ${bluearc}/original/$acc \"${efetchURL}&id=${acc}\"\n");
    if (${db} ne ".")
    {
	${chromStart} -= 1;
	print(NIBFRAG  "nibFrag -masked /cluster/data/${db}/nib/${chrom}.nib ${chromStart} ${chromEnd} + ${testDir}/${acc}.nibFrag;\n");
	print(NIBFRAG  "diff -biB ${bluearc}/masked/${acc} ${testDir}/${acc}.nibFrag;\n");
    }
    die ("Missing species: ". lc(${species}) . "\n") unless (defined $libOptions{lc($species)});
    print(MASKLIST "/cluster/bin/scripts/maskOne.csh $acc $libOptions{lc($species)}\n");
} 
EOF
#
chmod ug+x makeLists.pl

set freezeDate = "OCT-2004"
set bluearc = /cluster/bluearc/encode
./makeLists.pl $freezeDate
chmod ug+x $bluearc/wgetList $bluearc/para/maskList $bluearc/$freezeDate.test/runNibFragDiff

$bluearc/wgetList

############################################################
# update metadata file with correct seq lengths, N count
# This is still done manually and needs to be updated

rm -rf getLengths.pl >& /dev/null
cat > getLengths.pl << EOF
#!/usr/bin/perl -W

opendir(DIR,"/cluster/bluearc/encode/original");
@files= grep /NT/, readdir DIR;
closedir(DIR);
foreach $file (@files)
{
    $seq="";
    open(FASTA,"/cluster/bluearc/encode/original/$file") or die "Ha! $file ";
    <FASTA>; # ignore header line;
    while (<FASTA>) { $seq .= $_; }
    close(FASTA);
    $a = ($seq =~ tr/aA//);
    $c = ($seq =~ tr/cC//);
    $g = ($seq =~ tr/gG//);
    $t = ($seq =~ tr/tT//);
    $n = ($seq =~ tr/nN//);
    print "$file\t" . ($a+$c+$g+$t+$n) . "\t$n\n";
}
EOF
#
chmod ug+x getLengths.pl

rm -f lengths
