#!/bin/csh -ef
#
# Create flag file to indicate gbLoadRna should stop when it reaches
# a safe place.  This can be run from any directory, but must reside
# in $gbRoot/bin
#

# get gbRoot from path to executable
switch ($0)
    case "*/*":
        set scriptPath=$0
        breaksw
    default:
        set scriptPath=(`where $0`)
        breaksw
endsw
set gbRoot=$scriptPath:h:h
if (! -d $gbRoot/var) then
    echo "Error: $gbRoot/var does not exist or is not a directory"
    exit 1
endif

touch $gbRoot/var/dbload.stop

echo dbload stop request
