#!/bin/bash -e
#
# hgwbeta-dbload [-inclEsts] [-extFileUpdate] [-allowLargeDeletes]
#
# dbload for hgwbeta
#
#   - separate script since hgwbeta is updated before rr
#   - does weekly dump of sequences, which are picked up by other rr nodes
opts="$*"

# databases to update
databases="hg16 hg17 mm3 mm4 mm5 rn3 fr1 dm1 sacCer1 panTro1 galGal2 ce2 danRer1 ci1 canFam1 anoGam1 tetNig1 dp2 xenTro1 apiMel1 droYak1"

# gbRoot on hgnfs1
gbRoot=/genbank

# wait for copy to hgwnfs1
copyTime=var/copy/copy.time

# workdir is a local dir
workdir=/scratch/tmp/genbank

exec $gbRoot/etc/dbload $opts $downloadOpt $gbRoot "$databases" $copyTime $workdir

