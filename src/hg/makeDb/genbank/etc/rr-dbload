#!/bin/bash -e
#
# rr-dbload [-inclEsts] [-extFileUpdate]
#
# dbload for rr servers.
opts="$*"

# databases to update
databases="hg16 hg17 mm3 mm4 mm5 rn3 fr1 dm1 sacCer1 panTro1 galGal2 ce2 danRer1 ci1 canFam1 anoGam1 tetNig1 dp2"

# other options to include
otherOpts=""

# gbRoot on hgnfs1
gbRoot=/genbank

# workdir is a local dir
workdir=/var/tmp/genbank

# wait for copy to hgwnfs1
copyTime=var/copy/copy.time

exec $gbRoot/etc/dbload $opts $otherOpts $gbRoot "$databases" $copyTime $workdir
