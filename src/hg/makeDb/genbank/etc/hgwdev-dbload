#!/bin/bash -e
#
# hgwdev-dbload [-inclEsts] [-extFileUpdate] [-allowLargeDeletes]
#
# dbload for hgwdev.
#
opts="$*"

# databases to update
databases="hg16 hg17 mm3 mm4 mm5 rn3 fr1 dm1 sacCer1 panTro1 galGal2 ce2 danRer1 danRer2 ci1 canFam1 anoGam1 tetNig1 dp2 xenTro1 apiMel1 droYak1 droMoj1 droVir1 droAna1"

# gbRoot on hgnfs1
gbRoot=/cluster/data/genbank

# load directly, no copy needed
buildTime=var/build/build.time

# workdir is a local dir
workdir=/scratch/tmp/genbank

exec $gbRoot/etc/dbload $opts $gbRoot "$databases" $buildTime $workdir



