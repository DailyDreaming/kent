#!/bin/bash -e

# db-load-test [-initialLoad] [-noPerChrom] [-reloadList file] [-xenoRefSeq] name
# run load tests on the current set of readable data files.

# find GBROOT based location of this script.
dir=`which $0`
dir=`dirname $dir`
dir=`dirname $dir`
GBROOT=`dirname $dir`
. ${GBROOT}/tests/subset/init.sh

flags=""
chkFlags=""
while [[ $1 == -* ]] ; do
    opt=$1
    shift
    case $opt in
        -initialLoad)
            flags="$flags -initialLoad";;
        -noPerChrom) 
            flags="$flags -noPerChrom"
            chkFlags="$chkFlags -noPerChrom";;
        -xenoRefSeq) 
            flags="$flags -xenoRefSeq"
            chkFlags="$chkFlags -xenoRefSeq";;
        -reloadList) 
            flags="$flags -reloadList=$1"
            shift;;
        *)  echo "invalid option $opt" >&2
            exit 1;;
    esac
done

if [ $# != 1 ] ; then
    echo "wrong # args: db-load-test -initialLoad -noPerChrom -reloadList file name" >&2
    exit 1
fi
name="$1"
echo $name
out=out/$name
mkdir -p $out
log=$out/$name.log
rm -f $log

verb=-verbose=2
verb=-verbose=4
verb=-verbose=8
#verb=
flags="$flags -goFaster"

gbdbGenBank=`pwd`
shopt -s nullglob
(set -x && gbLoadRna $flags $verb -gbdbGenBank=$gbdbGenBank ${TESTDB}) >>$log 2>&1 || exit 1

dump-test-tables ${TESTDB} $out
(set -x && gbSanity -test -checkExtSeqRecs $chkFlags -verbose=1 ${TESTDB}) >>$log 2>&1 || exit 1
