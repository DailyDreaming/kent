#!/bin/bash -e
# hgLoadEnsembl - Download enembl gene predictions from ftp site and create tracks in the browser.
[ $# != 4 ] && echo "usage: hgLoadEnsembl organism version input-directory db " >&2 && echo "   for example: hgLoadEnsembl homo_sapiens core_43_36e /cluster/store8/ensembl/ensembl_core_43_36e hg18" >&2 && exit 1;
organism=$1
version=$2
outdir=$3
db=$4
ensDb=ensembl_${organism}_${version}
ensemblDownload $organism $version $outdir
ensemblDbImport $organism $version $outdir 
loadEnsembl $organism $version $outdir $db 
echo "dropping database $ensDb in 5 seconds"
sleep 5
hgsql mysql -e "drop database $ensDb"
