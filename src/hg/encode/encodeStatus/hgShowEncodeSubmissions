#!/bin/csh -ef

# hgShowEncodeSubmissions - generate web page listing projects with status and metadata
#
# $Header: /projects/compbio/cvsroot/kent/src/hg/encode/encodeStatus/hgShowEncodeSubmissions,v 1.3 2008/11/06 17:58:57 kate Exp $

echo "Content-Type:text/html"
echo ""
echo "<HTML><BODY>"

/cluster/bin/x86_64/hgsql -H encpipeline_prod -e 'select name "Name", status "Status", DATE_FORMAT(updated_at,"%Y-%m-%d") "Updated", metadata "Metadata Terms", CONCAT("<A HREf=\"http://genome-test.cse.ucsc.edu/cgi-bin/hgTrackUi?db=hg18&g=",track,"\" target=\"newtab\">http://genome-test.cse.ucsc.edu/cgi-bin/hgTrackUi?db=hg18&g=",track,"</A>") "Track in Browser" from projects where status<>"new" order by status,name' | sed -e 's/TABLE/TABLE BGCOLOR="#FFFEE8" STYLE=\"border-collapse: collapse\" CELLPADDING=3/' -e 's/<TH/<TH STYLE=\"background:#D9E4F8\"/g' 
echo "</BODY></HTML>"
